<div class="layout">
    {% unless noComics %}
    <div class="flex flex--col">
        <div class="title">
            {{title}} - {{ onSaleDate }}
        </div>
        <div class="flex flex--row">
            <div class="flex flex--col">
                <img class="image-dither h--80" src="{{thumbnail.path}}/portrait_uncanny.jpg" alt="{{title}}"/>
            </div>
            <div class="flex flex--col">
                <div class="creators">
                    {%  for credit in  creators.items %}
                        <p class="text--center">{{ credit.role }}: {{ credit.name }}</p>
                    {% endfor %}
                </div>
                <div class="description">
                    <p class="text--center clamp--8" style="word-break: keep-all;">{{description}}</p>
                </div>
                <div class="price">
                    On sale for ${{prices[0].price}}
                </div>
            </div>
        </div>
    </div>
    {% else %}
        <span class="title">No Comics Found!</span>
    {% endunless %}
</div>

<div class="title_bar">
    <img class="image" src="/images/plugins/trmnl--render.svg" />
    <span class="title">Marvel Comics</span>
    <span class="instance">Out This Week</span>
  </div>